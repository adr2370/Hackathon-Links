<link rel="stylesheet" href="http://twitter.github.com/bootstrap/1.4.0/bootstrap.min.css">
<div class="container" style="text-align:center;">
<br>
<div class="row">
	<div class="span16">
		<h1>Hackathon Sites</h1>
	</div>
</div>
<div class="row" style="
    margin-bottom: 10px;
">
	<div class="span16">
		
		<input type="delete" id="delete" placeholder="Enter Link To Delete Here">
	<span id="deleteButton">Delete</span></div>
	
</div><div class="row" style="
    margin-bottom: 10px;
">
	<div class="span16">
		<a href="add.html" style="font-size: 24px;">Add Links</a>
	</div>
</div>
<div class="row">
	<div class="span16">
		<table class="tablesorter">
			<thread>
				<tr>
					<th>Name</th>
					<th>Link</th>
					<th>Description</th>
				</tr>
			</thread>
			<tbody>
				<div id="websiteAdding">
				<% @websites.reverse.each do |b| %>
				<tr>
					<td><%= b.name %></td>
					<td><a href="<%= b.address %>" target="_blank"><%= b.address %></a></td>
					<td><%= b.description %></td>
				</tr>
			    <% end %>
				</div>
			</tbody>
		</table>
	</div>
</div>